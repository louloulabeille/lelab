<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lelab.Views.CountPage" Title="Compteur">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="0">
            <StackLayout BackgroundColor="#518faa" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Label Text="0" x:Name="compteur_Label" TextColor="White" FontSize="125" HorizontalTextAlignment="Center">
                    <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <OnPlatform.iOS>HelveticaNeue-Thin</OnPlatform.iOS>
                            <OnPlatform.Android>HelveticaNeue-Thin.ttf#HelveticaNeue-Thin</OnPlatform.Android>
                        </OnPlatform>
                    </Label.FontFamily>
                </Label>
            </StackLayout>
            <Image Source="lab_separator.png" Aspect="Fill"></Image>
            <Frame BackgroundColor="white" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HasShadow="False"> 
                <Button Style="{StaticResource boutonLabStyle}" Text="Compter" Clicked="CountButtonClick" Margin="30,0,30,0"></Button>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>