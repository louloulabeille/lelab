<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lelab.Views.CountPage" Title="Compteur">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Spacing="0">
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label Text="0" x:Name="compteur_Label" FontSize="125" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout>
                <Button Style="{StaticResource boutonLabStyle}" Text="Compter" Clicked="CountButtonClick" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>